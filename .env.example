# Copy to `.env` and fill values. Do not commit real secrets.

NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database / Cache
DATABASE_URL=postgresql://ipmoney:ipmoney@127.0.0.1:5432/ipmoney
REDIS_URL=redis://127.0.0.1:6379

# JWT
JWT_SECRET=change-me
JWT_EXPIRES_IN_SECONDS=7200

# WeChat Mini Program Login
WX_MP_APPID=
WX_MP_SECRET=

# WeChat Pay v3
WX_PAY_MCHID=
WX_PAY_MCH_CERT_SERIAL_NO=
WX_PAY_API_V3_KEY=
WX_PAY_MCH_PRIVATE_KEY=
WX_PAY_NOTIFY_URL=

# S3 Compatible Storage (MinIO/COS/OSS)
S3_ENDPOINT=http://127.0.0.1:9000
S3_REGION=ap-guangzhou
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=ipmoney
S3_PUBLIC_BASE_URL=http://127.0.0.1:9000/ipmoney

# Feature Flags
ENABLE_USER_H5=true
ENABLE_H5_PAYMENT=false
ENABLE_AUTO_PAYOUT=false

